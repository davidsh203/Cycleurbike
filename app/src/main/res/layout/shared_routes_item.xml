<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background_frame_item2"
    android:id="@+id/linear_layout_shared_routes_item"
    android:padding="8dp">


    <TextView
        android:id="@+id/name_of_route_text_view_shared_routes_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="שם"
        android:gravity="center"
        android:padding="6dp"
        android:textSize="16sp"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:padding="6dp">

        <TextView
            android:id="@+id/date_text_view_shared_routes_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_weight="2"
            android:text="0.0.0000"
            android:textColor="#000000"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/total_time_text_view_shared_routes_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_weight="0.5"
            android:text="0.0.0000"

            android:textColor="#000000"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/total_distance_text_view_shared_routes_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_weight="0.5"
            android:text="0.0.0000"
            android:textColor="#000000"
            android:textSize="14sp" />



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="6dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/start_time_text_view_shared_routes_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:text="0.0.0000"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="14sp" />



        <TextView
            android:id="@+id/avg_speed_time_text_view_shared_routes_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="12dp"
            android:text="0.0.0000"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_weight="1"/>



    </LinearLayout>



    <ImageView
        android:id="@+id/map_image_view_shared_routes_profile"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_gravity="center"
        android:background="@drawable/background_frame_item"/>


</LinearLayout>