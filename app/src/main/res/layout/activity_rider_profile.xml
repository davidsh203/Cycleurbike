<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.RiderProfileActivity"
    android:background="#FFFBFFCE"
    >



    <TextView
        android:id="@+id/profile_rider_name_text_view_profile_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="שם הרוכב"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:textSize="16sp"
        android:textColor="#000000"/>



    <TextView
        android:id="@+id/rider_email_address_profile_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="אימייל"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:textSize="16sp"
        android:textColor="#000000"/>


    <TextView
        android:id="@+id/birth_of_dat_rider_profile_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="תאריך לידה"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:textSize="16sp"
        android:textColor="#000000"/>


    <TextView
        android:id="@+id/city_of_rider_profile_acitivty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="עיר מגורים"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:textSize="16sp"
        android:textColor="#000000"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/routs_recycler_view_profile_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"/>




</LinearLayout>